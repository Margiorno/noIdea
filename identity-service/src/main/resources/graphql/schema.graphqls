type Mutation {
    login(loginRequest: LoginRequestDTO!): LoginResponseDTO
    register(registerRequest: RegisterRequestDTO!): RegisterResponseDTO
}


input LoginRequestDTO{
email: String!
password: String!
}

type LoginResponseDTO{
    token: String!
    expiresAt: String!
}

input RegisterRequestDTO{
    email: String!
    password: String!
#    TODO to extend in future (communication with different microservice needed)
}

type RegisterResponseDTO{
    id: String!
}